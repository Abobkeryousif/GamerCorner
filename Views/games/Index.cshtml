@model IEnumerable<Game>

@{
    ViewData["Title"] = "Games";
}

<a class="btn btn-secondary" asp-action="Create">
    <i class="bi bi-plus-circle-dotted btn-lg"></i>
    Add Game
</a>

<div class="mt-5">
    <table class="table table-bordered border-primary">
        <tbody>
            @foreach(var game in Model)
            {
                <tr class="border-1 border-success">
                    <td>
                        <div class="d-flex">
                            <div class="pe-3"><img src="@($"{FileSetting.imagePath}/{game.Cover}")" alt="@game.Name" 
                                style="max-width:100px" /></div>
                        </div>
                        <div class="d-flex flex-column justify-content-center">
                            <h4 class="text-light">@game.Name</h4>
                            <h5>@game.category.Name</h5>
                        </div>
                    </td>
                    <td class="d-flex justify-content-end">
                        <div>
                            <a class="btn btn-info rounded rounded-2 me-2" asp-action="Update" asp-route-id="@game.Id">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                            <a herf="#" class="btn btn-danger rounded rounded-2">
                                <i class="bi bi-trash3"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>